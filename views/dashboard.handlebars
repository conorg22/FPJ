<header class="welcome">
    <h3>Hello, {{this.username}}</h3>
    <p>Please select a job to continue.</p>
</header>


<section>
    <form action="/punchIn" method="get">
        <input type="submit" class="taskPage" value="Get To Work!" />
    </form>
</section>


<section>
    <!--    display punch data-->
    <h2>Today's Log</h2>

    <ol>{{#each punchIns}}
        <li>{{this.prettyTime}}</li>
        {{/each}}
    </ol>

</section>


<section>
    <form action="/logout" method="post">
        <input type="submit" class="taskPage" value="Logout" />
    </form>
</section>